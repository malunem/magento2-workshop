<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <update handle="customer_account" />
    <body>
        <referenceBlock name="page.main.title">
          <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">My ToDo List</argument>
          </action>
        </referenceBlock>
        <referenceContainer name="content">
          <block class="Magento\Framework\View\Element\Template" name="magemastery.todo.block.list" template="MageMastery_Todo::todo.phtml">
            <arguments>
              <argument name="jsLayout" xsi:type="array">
                <item name="components" xsi:type="array">
                  <item name="todo" xsi:type="array">
                    <item name="component" xsi:type="string">
                      MageMastery_Todo/js/view/todo
                    </item>
                    <item name="template" xsi:type="string">
                      MageMastery_Todo/todo
                    </item>
                  </item>
                </item>
              </argument>
            </arguments>
          </block>
        </referenceContainer>
    </body>
</page>